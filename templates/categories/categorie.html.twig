{% extends 'base.html.twig' %}

{% block title %}{{ categorie.titre }}{% endblock %}

{% block body %}

  {% include "header.html.twig" %}

  <div class="container mt-5">
    <h1>{{ categorie.titre }}</h1>
    <hr>
    <div class="row">
      {% if jeux is not null %}
      {% for jeu in jeux %}
        <div class="col-md-4 mb-4">
          <div class="card">
            <img class="card-img-top" src="{{ '/' ~ jeu.image }}" alt="{{ jeu.titre }}">
            <div class="card-body">
              <h5 class="card-title">{{ jeu.titre }}</h5>
              <p class="card-text">{{ jeu.description|slice(0, 60) ~ '...'  }}</p>
              <a href="{{ path('articles_article', {'id': jeu.id}) }}" class="btn btn-primary stretched-link">Voir le jeu</a>
            </div>
          </div>
        </div>
      {% endfor %}
      {% else %}
        <p>Aucun jeu trouvé pour cette catégorie.</p>
      {% endif %}
    </div>
  </div>
{% endblock %}