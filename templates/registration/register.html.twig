{% extends 'base.html.twig' %}


{% block title %}inscription{% endblock %}

{% block body %}

{% include "header.html.twig" %}


<div class="container">
    <div class="row">
        <div class="col">
            <h1>S'inscrire</h1>

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.pseudo) }}
                {{ form_row(registrationForm.RGPDConsent) }}
                
           
                <div class="d-flex justify-content-center gap-5 mt-3">
                    <button type="submit" class="btn btn-lg btn-primary">S'inscrire</button>
                    <a href="{{ path('app_login') }}" class="btn btn-lg btn-secondary">Me connecter</a>
                </div>
                
            {{ form_end(registrationForm) }} 
            {{ form_rest(registrationForm) }}  
        </div>
    </div>
</div>
    

{% include "footer.html.twig" %}

{% endblock %}
